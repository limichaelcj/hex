# Get External IP / local IPs
alias ip="curl ipinfo.io/ip"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Quickly serve the current directory as HTTP
alias hserve='google-chrome localhost:3000 & http-server -c-1 -p 3000'
alias rserve='google-chrome localhost:8000 & ruby -run -e httpd . -p 8000'
# Or python -m SimpleHTTPServer :)

# Edit aliases
alias aliases='vim ~/.aliases'

# Quick navigate directories
alias up='cd ..'
alias bin='cd /usr/bin'
alias dl='cd ~/Downloads'
alias repo='cd ~/code/repositories'
alias sandbox='cd ~/code/examples'
alias tmp='cd ~/code/tmp'
alias assets='cd ~/code/assets'
alias trash='cd ~/.local/share/Trash/files'

#git
alias gc='git commit -m'
alias gcv='git commit -v'
alias gpmaster='git push origin master'
alias gpdev='git push origin development'
alias gcomaster='git checkout master'
alias gcodev='git checkout development'

# npm
alias publish='npm publish --access=public'
